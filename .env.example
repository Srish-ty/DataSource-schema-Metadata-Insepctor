# SourceSense Environment Configuration

# Application Settings
APP_NAME=SourceSense
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Database Connection (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USERNAME=your_username
DB_PASSWORD=your_password
DB_SSL_MODE=prefer

# Atlan Platform Configuration
ATLAN_API_KEY=your_atlan_api_key_here
ATLAN_BASE_URL=https://your-tenant.atlan.com
ATLAN_TENANT=your_tenant_name

# Application Features
ENABLE_QUALITY_METRICS=true
ENABLE_LINEAGE_TRACKING=true
ENABLE_CACHING=true

# Performance Settings
MAX_TABLES_TO_SCAN=100
MAX_ROWS_FOR_PROFILING=10000
CONNECTION_TIMEOUT=30
QUERY_TIMEOUT=60

# Security
ENCRYPT_CREDENTIALS=true
SESSION_SECRET=your_secret_key_here

# Cache Settings (Optional - for Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0